"""The main script for the Ubuntu One Installer."""

from gi.repository import Gtk, GLib
from ubuntuone.installer import (is_installed,
                                 CONTROL_PANEL_COMMAND, CONTROL_PANEL_PACKAGE)


if __name__ == "__main__":
    if is_installed(CONTROL_PANEL_PACKAGE):
        GLib.spawn_command_line_async(CONTROL_PANEL_COMMAND)
    else:
        from ubuntuone.installer.gui import Window
        dialog = Window()
        dialog.run()
        Gtk.main()
